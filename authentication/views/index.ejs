<div class="container text-center">
  <div class="row">
    <div class="col"><h1><%= data.user.name%>'s Task List</h1></div>
    <div class="col d-inline-flex flex-row">
      <button type="button" class="btn btn-danger flex-start" style="font-size: 1.5em;" id="logout_btn">Log out</button>
    </div>
  </div>
</div>

<form id="form_add_task" method="POST" action="/todolist" class="container" >
  <div class="row">
    <input type="text" name="task" class="col-8" placeholder="Enter New task here"/>
    <span class="col-1"></span>
    <button type="submit" class="btn btn-success col-2">ADD TASK</button>
  </div>
</form>
<ul id="task_list" class="container">
  <% for(const id in data.todoList){
    const task = data.todoList[id] %>
    <li id="<%= task.id %>" class="row d-flex">
      <span style="cursor: pointer; font-size: 2em;" aria-elem="task_info" class="col-6"  ><%= task.taskInfo %></span>
      <input style="cursor: pointer" type="range" value="<%= task.progress %>" aria-elem="task_progress" class="col-2" />
      <span class="col-2 flex-center" style="font-size: 1.5em;"> <%= task.progress < 100 ? "pending" : "completed" %> </span>
      <button aria-elem = "task_button" class="btn-close col-2" style="font-size: 2em;"></button>
    </li>
  <% }%>
</ul>
<script src="/static/scripts/index.js"></script>
